{
  "manifest_version": 3,
  "name": "Spicy Contributions",
  "version": "1.0.0",
  "description": "Turn GitHub contribution squares red for shipped bugs and blink when tests fail.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://api.github.com/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options.html"
}
